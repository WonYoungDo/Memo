<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.tawny.memo.post.repository.PostRepository">
 	<insert id="insertPost" parameterType="map">
	 	INSERT INTO
	 		`post`
		(
			`userId`
			, `title`
			, `contents`
			, `imagePath`		
		)
		VALUE
		(
			#{userId}
			, #{title}
			, #{contents}
			, #{imagePath}
		)
 	</insert>
 	
 	<select id="selectPostList" resultType="com.tawny.memo.post.domain.Post" parameterType="int">
 		SELECT
 			`id`
			, `userId`
			, `title`
			, `contents`
			, `imagePath`
			, `createdAT`
			, `updatedAT`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY 
			`id` DESC;
 	</select>
 	
 	<select id="selectPost" parameterType="int" resultType="com.tawny.memo.post.domain.Post">
 		SELECT
 			`id`
			, `userId`
			, `title`
			, `contents`
			, `imagePath`
			, `createdAT`
			, `updatedAT`
		FROM
			`post`
		WHERE
			`id` = #{id}
 	</select>
 	
 	<update id="updatePost" parameterType="map">
 		UPDATE 
 			`post`
		SET
			`title` = #{title}
			, `contents` = #{contents}
			, `updatedAT` = now()
		WHERE
			`id` = #{postId}
 	</update>
 	
 	<delete id="deletePost" parameterType="int">
 		DELETE FROM
 			`post`
 		WHERE
 		 	`id` = #{postId}
 	</delete>
 </mapper>